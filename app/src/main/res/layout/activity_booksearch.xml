<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookSearchActivity">

    <TextView
        android:id="@+id/isbnSearch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="#80CFEA"
        android:text="도서 검색"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/isbnSearchedit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="검색하고 싶은 도서를 입력하세요"
        android:layout_below="@+id/isbnSearch"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/isbnSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:layout_toRightOf="@+id/isbnSearchedit"
        android:layout_below="@+id/isbnSearch"
        />

    <ScrollView
        android:id="@+id/isbnSearchScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/isbnSearchedit"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</RelativeLayout>
