<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="회원가입"
        android:background="#80CFEA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="70dp"
        android:textSize="30sp"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u00B7  E-mail은 로그인할 때 입력하는 ID입니다.\n\u00B7 E-mail형식으로 작성하셔야 회원가입이 됩니다.\n\u00B7 비밀번호는 6글자 이상 입력해야 합니다.\n\u00B7 닉네임은 게시판에서 사용할 당신의 별명입니다.\n\u00B7 닉네임은 다른 사람과 중복될 수 있습니다."
        />

    <EditText
        android:id="@+id/idText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/passwdText"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/passwdCheckText"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/nickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="50dp"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_round"
        android:textColor="#858484"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="가입하기"/>
</LinearLayout>